    .maks { max-width: 300px; background: #efe; }
    .blok { display: block; border: 1px solid #000; padding: 4px; }

    * Metin ve Yazı Tipleri *
    .metin { text-align: center; text-transform: uppercase; letter-spacing: 1px; }
    .yazi { font-family: Verdana, sans-serif; }

    * Bağlantı, Liste, Tablo *
    .tablo { border-collapse: collapse; }
    .tablo th, .tablo td { border: 1px solid #000; padding: 4px; }

    * Konum ve Z-Index, Taşma, Float, Inline-Block, Hizalama *
    .konteyner { position: relative; border: 1px solid #000; height: 70px; }
    .mutlak { position: absolute; left: 10px; top: 10px; background: #fcc; padding: 4px; }
    .katman1 { position: absolute; left: 20px; top: 20px; background: #cfe; z-index: 2; padding: 4px; }
    .tas { width: 140px; height: 40px; overflow: auto; border: 1px solid #000; }
