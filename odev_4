    .temizle { clear: both; }
    .ib { display: inline-block; width: 80px; border: 1px solid #000; text-align: center; }
    .orta { text-align: center; border: 1px solid #000; padding: 4px; }

    * Opaklık, Basit Menü, Açılır Menü, Galeri *
    .opak { background: #06c; color: #fff; opacity: .6; padding: 8px; width: 120px; }
    nav a { margin-right: 8px; }
    .acil { position: relative; border: 1px solid #000; display: inline-block; padding: 6px; }
    .icerik { display: none; position: absolute; background: #eee; padding: 6px; }
    .acil:hover .icerik { display: block; }
    .galeri img { width: 120px; margin: 4px; border: 1px solid #ccc; }

    * Sprite, Form, Birimler, !important, calc, değişkenler *
    .sprite { width: 60px; height: 30px; border: 1px solid #000;
              background: url(https://www.w3schools.com/css/img_navsprites.gif) 0 0; }
    .yuzde { width: 50%; background: #eef; }
    .rem { font-size: 2rem; }
    .onemli { color: gray !important; }
    .calc { width: calc(100% - 40px); border: 1px solid #000; }
    :root { --ana: #06c; }
    .btn { background: var(--ana); color: #fff; padding: 6px; border: none; }

    * Esnek düzen (web sitesi düzeni) *
    .flex { display: flex; gap: 8px; }
    .sol { flex: 1; background: #eef; padding: 8px; }
    .sag { flex: 2; background: #efe; padding: 8px; }

    * Yuvarlak köşe, Arka plan degrade, Gölge, Geçiş, Dönüşüm, Animasyon *
    .yuvarlak { width: 120px; height: 40px; background: #ddd; border-radius: 8px; }
